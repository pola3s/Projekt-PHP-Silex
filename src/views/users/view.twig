{% extends 'layout.twig' %}

{% block content %}

    <div class="col-lg-12 text-center">

	
		
		<h4>{{ user.firstname }} </h4>
		<h4>{{ user.lastname }} </h4>
		<h4>{{ user.login }} </h4>
		
		
		{% for file in files %}
            <div class="col-lg-12 text-center">

				<img src="{{ app.request.basepath }}/media/{{ file.name }}"  height="50%" width="50%">
				
				<h4><a href="{{ url('view', {'id': file.id_file}) }}">Zobacz</a></h4>

			</div>
        {% endfor %}

		
		
		
	</div>
		
	
	  
		
    
{% endblock %}
