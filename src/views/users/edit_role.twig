{% extends 'layout.twig' %}
{% block pagetitle %}Zmień rolę{% endblock %}


{% block content %}

    {% if is_granted('ROLE_ADMIN') %}

        <h2>Zmień rolę {{ login }}</h2>
    {% for flashMessage in app.session.getFlashBag.get('message') %}
        {{ flashMessage.content }}
    {% endfor %}
    <form action="" method="post" >
        {{ form_widget(form) }}
        <input class="btn btn-default" type="submit" name="Wyślij">
    </form>
	

    {% else %}
        Brak dostępu
    {% endif %}
{% endblock %}