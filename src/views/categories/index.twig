{% extends 'layout.twig' %}

{% block pagetitle %}Kategorie{% endblock %}

{% block content %}


	
	  {% for flashMessage in app.session.getFlashBag.get('message') %}
        <div class="alert alert-{{ flashMessage.type }}">
            {{ flashMessage.content }}
        </div>
    {% endfor %}
	
    <h1>
        Lista kategorii
    </h1>
	<p>
        <a href="{{ url('/categories/add') }}" >
            Dodaj nową kategorię
        </a>
    </p>
    {%  if categories|length > 0 %}

    <table>
        <thead>
        <tr>
            <th>Id</th>
			<th>Nazwa</th>
		
        <tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.id_category }}  </td>
					<td>{{ category.name }}  </td>
					<td>
                        <a href="{{ url('/categories/edit', {'id': category.id_category}) }}">Edytuj</a>
                    </td>
                    <td>
                        <a href="{{ url('/categories/delete', {'id': category.id_category}) }}">Usuń</a>
                    </td>
				</tr>
					
				
        {% endfor %}
		
        </tbody>
    </table>
   {% else %}
        <p>
            Brak kategorii do wyświetlenia.
        </p>
    {% endif %}
          
{% endblock %}