
{% block comments %}

	{% if is_granted ('ROLE_ADMIN') %}
							 
	{% elseif is_granted('ROLE_USER') %}
		<p>
			<div class="col-lg-12 text-center">
				<a href="{{ url('/comments/add', {'id_file': id_file|e}) }}" title="Add comment">
					<button type="button" class="btn btn-success">Dodaj komentarz</button>
				</a>
			</div>
		</p>
	{% endif %}

    {% for comment in comments %}
        <div class="col-lg-12 text-center">
            <p>

            <p class="text-center">
                <small> {{ comment.published_date|e }}</small>
				
            </p>
				<p>
					{{ comment.content|raw }}
					
				</p>
           

				
				{% if is_granted ('ROLE_ADMIN') %}
											 
				{% elseif is_granted('ROLE_USER') %}
						<p>
                        <a href="{{ url('/comments/edit', {'id': comment.id_comment|e}) }}"
                           title="Edit comment">
                            <button type="button" class="btn btn-warning">Edytuj
                                komentarz
                            </button>
                        </a>
                        <a href="{{ url('/comments/delete', {'id': comment.id_comment|e}) }}"
                           title="Delete comment">
                            <button type="button" class="btn btn-danger">Usuï¿½
                                komentarz
                            </button>
                        </a>
                {% endif %}   
          
            <hr>
        </div>
    {% endfor %}
{% endblock %}